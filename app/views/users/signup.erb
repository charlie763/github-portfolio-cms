<div class="row justify-content-center">
  <div class="col-md-8 col-12">
    <div class="row justify-content-center pt-5 pb-2">
      <div class="col-md-8 col-10">
        <h4 class="primary-text my-3">Sign Up:</h4>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-md-8 col-10">
        <% if flash[:notice] %>
          <p class="text-danger"><%= flash[:notice]%></p>
        <% end %>
        <form method="POST" action="/signup">
          <div class="form-group">
            <label class="secondary-text" for="username-input">Username: </label>
            <input id="username-input" class="form-control" type="text" name="username">
          </div>
          <div class="form-group">
            <label class="secondary-text" for="password-input">Password: </label>
            <input id="password-input" class="form-control" type="password" name="password">
          </div>
          <div class="form-group">
            <label class="secondary-text" for="github-input">GitHub Username: </label>
            <input id="github-input" class="form-control" type="text" name="github_username">
          </div>
          <div class="form-group">
            <button class="btn btn-primary btn-md" type="submit">Sign Up</button>
          </div>
        </form>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-auto">
        <br>
        <p class="secondary-text">Or <a href="/login">Log In</a> if you already have an account.</p>
      </div>
    </div>
  </div>
</div>